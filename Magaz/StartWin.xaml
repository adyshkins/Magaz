<Window x:Class="Magaz.StartWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magaz"
        mc:Ignorable="d"
              Title="MagaZ" 
        Height="500" 
        Width="400" 
        WindowStartupLocation="CenterScreen"
        Background="#7284A8"        
               
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133"/>
            <ColumnDefinition Width="267"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Background="#FFF"
                Grid.ColumnSpan="2"
                Grid.RowSpan="8"
                Margin="15"
                CornerRadius="15"/>

        <TextBlock Text="Авторизация" 
                   Grid.Row="0" 
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="20"
                   FontFamily="Tempus Sans ITC"
                   Margin="0 12 0 0"/>

        <TextBlock Text="Логин" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right"
                   Margin="10"
                   FontSize="17"/>

        <TextBox x:Name="txtLogin" Grid.Row="1" 
                 Grid.Column="1" 
                 Width="200"
                 Height="30"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 FontFamily="Tempus Sans ITC"
                 />


        <TextBlock Text="Пароль" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right"
                   Margin="10"
                   FontSize="17"/>

        <PasswordBox x:Name="pswPassword" Grid.Row="2" 
                 Grid.Column="1" 
                 Width="200"
                 Height="30"
                 FontSize="16"
                 VerticalContentAlignment="Center"
                 FontFamily="Tempus Sans ITC"/>

        <Button x:Name="btnLogin"
                Grid.Column="0"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Width="180"
                Height="30"
                Content="Войти"
                FontSize="15" 
                Click="btnLogin_Click"/>

        <Button x:Name="btnClose"
                Grid.Column="0"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Width="180"
                Height="30"
                Content="Отмена"
                FontSize="15"
                Click="btnClose_Click"/>


        <Button x:Name="btnRegistration"
                Grid.Column="0"
                Grid.Row="6"
                Grid.ColumnSpan="2"
                Width="180"
                Height="30"
                Content="Регистрация"
                FontSize="15"
                Visibility="Hidden"
               />


        <TextBlock x:Name="txtDataTime" Text="Время"
                   Grid.Row="7"
                   Grid.Column="1"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Right"
                   Margin="20"/>

        <Border Grid.Column="2"
                Grid.Row="0"
                Grid.RowSpan="8"
                Background="Aqua"/>
    </Grid>
</Window>








