<Window x:Class="Magaz.Windows.AddEditEmployeeWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magaz.Windows"
        mc:Ignorable="d"
        Title="AddEditEmployeeWin" Height="600" Width="400" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <TextBlock x:Name="txtxHeader"
                   Grid.ColumnSpan="2"
                   FontSize="17"
                   HorizontalAlignment="Center"
                   Margin="0 15 0 0"
                   FontWeight="Bold"/>

        <TextBlock Text="Фамилия"
                   Grid.Row="1"
                   Style="{StaticResource textBlockStyle1}" />

        <TextBlock Text="Имя"
                   Grid.Row="2"
                   Style="{StaticResource textBlockStyle1}" />

        <TextBlock Text="Отчество"
                   Grid.Row="3"
                   Style="{StaticResource textBlockStyle1}" />

        <TextBlock Text="Логин"
                   Grid.Row="4"
                   Style="{StaticResource textBlockStyle1}" />

        <TextBlock Text="Пароль"
                   Grid.Row="5"
                   Style="{StaticResource textBlockStyle1}" />

        <TextBlock Text="Должность"
                   Grid.Row="6"
                   Style="{StaticResource textBlockStyle1}" />

        <TextBox x:Name="txtLastName" 
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="7 15 25 15"
                 FontSize="15"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="txtLastName_PreviewTextInput"/>

        <TextBox x:Name="txtFirstName" Grid.Row="2"
                 Grid.Column="1"
                 Margin="7 15 25 15"
                 FontSize="15"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="txtLastName_PreviewTextInput"/>

        <TextBox x:Name="txtMiddleName" Grid.Row="3"
                 Grid.Column="1"
                 Margin="7 15 25 15"
                 FontSize="15"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="txtLastName_PreviewTextInput"/>

        <TextBox x:Name="txtLogin" Grid.Row="4"
                 Grid.Column="1"
                 Margin="7 15 25 15"
                 FontSize="15"
                 VerticalContentAlignment="Center"/>

        <TextBox x:Name="txtPassword" Grid.Row="5"
                 Grid.Column="1"
                 Margin="7 15 25 15"
                 FontSize="15"
                 VerticalContentAlignment="Center"/>

        <ComboBox x:Name="cmbEmployeeRole" Grid.Row="6"
                 Grid.Column="1"
                 Margin="7 15 25 15"
                 FontSize="15"
                 HorizontalContentAlignment="Center"/>


        <Button x:Name="btnSave" Grid.Row="7"
                Grid.Column="0"
                Content="Cохранить"
                FontSize="16"
                Grid.ColumnSpan="2"
                Width="200"
                Margin="0 15"
                Click="btnSave_Click"/>

        <Button x:Name="btnClose" Grid.Row="8"
                 Grid.Column="0"
                Content="Отмена"
                FontSize="16"
                Grid.ColumnSpan="2"
                Width="200"
                Margin="0 15"
                Click="btnClose_Click"/>
    </Grid>
</Window>
